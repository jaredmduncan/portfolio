<form style="display:inline;" method="get" action="/getForm">
	<div class="row mb-3">
		<div class="col">
			<h1>Get Trips By City</h1>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			Select Destination City
		</div>
		<div class="col">
			<select name="city">
				{{#each cities}}
					<option value="{{this}}">{{this}}</option>
				{{/each}}
			</select>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<input type="submit">
		</div>
	</div>
</form>